<div class="row mx-auto mt-4">
  <h3 class="mx-auto my-4"><strong>カテゴリ編集</strong></h3>
</div>

<div class="container mb-4">
  <%= form_with model:@category, url:admin_category_path(@category.id), method: :PATCH  do |f| %>
    <div class="form-group row mx-auto">
      <div class="col-md-2 my-2"><%= f.label :カテゴリ,class:"my-2" %></div>
      <div class="col-md-3 my-1"><%=f.text_field:name,placeholder: @category.name,class: " form-control" %></div>
      <div class="col-md-2 my-1"><%=f.submit "変更を保存",class: "btn btn-success" %></div>
    </div>
  <% end %>
</div>

