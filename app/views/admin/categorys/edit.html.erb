<div class="container category-container">
  <h3 class="category-edit-title"><strong>カテゴリ編集</strong></h3>
  <%= form_with model:@category, url:admin_category_path(@category.id), method: :PATCH  do |f| %>
    <div class="form-group row mx-auto">
      <div class="category-item col-md-2"><%= f.label :カテゴリ%></div>
      <div class="category-item col-md-3"><%=f.text_field:name,placeholder: @category.name,class: " form-control" %></div>
      <div class="category-item col-md-2"><%=f.submit "変更を保存",class: "btn btn-success" %></div>
    </div>
  <% end %>
</div>