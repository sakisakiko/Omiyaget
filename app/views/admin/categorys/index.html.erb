<div class="container category-container">
  <h3 class="category-index-title"><strong>カテゴリ一覧・追加</strong></h3>
  <%= form_with model: @category, url:admin_categorys_path, method: :POST do |f| %>
    <div class="form-group row mx-auto">
      <div class="category-item col-md-2"><%= f.label :カテゴリ %></div>
      <div class="category-item col-md-3"><%=f.text_field:name,class: " form-control" %></div>
      <div class="category-item col-md-2"><%=f.submit "新規登録",class: "btn btn-success" %></div>
    </div>
  <% end %>

  <table class="table col-lg-4">
    <thead>
      <tr>
        <th>カテゴリ一覧</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%=category.name %></td>
        <td><%=link_to "編集する",edit_admin_category_path(category.id),class: " btn btn-success" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

</div>