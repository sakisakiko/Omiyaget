<div class="container">
  <div class="row mx-auto"><!--row1-->
    <div class="col-12 mx-auto"><!--col-12-->
      <div class="card my-4 " style="border:1px solid silver"><!--card-->
        <div class="row no-gutters"><!--row no-gutters-->
          <div class="col-md-4 mx-auto">
            <% if customer_signed_in? %>
              <% if @customer==current_customer %>
              <!--マイページの表示-->
                <h5 style="text-align:center">マイページ</h5>
                <div style="text-align:center"><%=image_tag current_customer.get_profile_image.variant(gravity: :center, resize:"100x100^", crop:"100x100+0+0").processed%></br></div>
                <div style="text-align:center"><%=link_to "編集",edit_customer_path(@customer.id),class: "btn btn-primary my-3 col-3" %></br></div>
              <!--マイページの表示ここまで-->
              <% else %>
              <!--自分以外のユーザーの表示-->
                <h5 style="text-align:center"><%=@customer.name %>さんのプロフィール</h5>
                <div style="text-align:center">
                <%=image_tag @customer.get_profile_image.variant(gravity: :center, resize:"100x100^", crop:"100x100+0+0").processed%>
                </div>
                <% if @customer.is_following_by?(current_customer) %>
                  <%=link_to customer_relationships_path(@customer),method: :delete do %>
                    <div style="text-align:center"><button class="btn btn-secondary my-3" >フォロー解除</button></div>
                  <% end %>
                <% else %>
                  <%=link_to customer_relationships_path(@customer),method: :post do %>
                    <div style="text-align:center"><button class="btn btn-success my-3">フォロー</button></div>
                  <% end %>
                <% end %>
              <!--自分以外のユーザーの表示ここまで-->
              <% end %>
            <% else %>
              <h5 style="text-align:center" class="mt-4"><%=@customer.name %>さんのプロフィール</h5>
              <div style="text-align:center">
               <%=image_tag @customer.get_profile_image.variant(gravity: :center, resize:"100x100^", crop:"100x100+0+0").processed%>
              </div>
            <% end %>
          </div>
          <div class="col-md-7">
            <div class="card-body">
              <h5 class="card-title"><strong><%=@customer.name %></strong></h5>
              <table>
                <thead>
                  <tr>
                    <td>性別：<%=@customer.gender_i18n %></td>
                    <td class="pl-5">出身地：<%=@customer.prefecture%></td>
                  </tr>
                </thead>
              </table>

              <table class="mt-3 p-3" style="border: 1px solid">
                <tbody>
                  <tr>
                    <td class="p-2">＜自己紹介＞</br>
                      <%=@customer.introduction %>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div><!--row no-guttersここまで-->
      </div><!--cardここまで-->
    </div><!--col-12ここまで-->
  </div><!--row1ここまで-->

  <div class=customer-post-item><!--customer-post-itemのdiv-->
    <% if customer_signed_in? %>
      <% if @customer==current_customer %>
        <h4 class="my-3"><strong>投稿したお土産</strong></h4>
      <% else %>
        <h4 class="my-3"><strong>投稿されたお土産</strong></h4>
      <% end %>
    <% else %>
      <h4 class="my-3"><strong>投稿されたお土産</strong></h4>
    <% end %>

    <div class="row mx-auto"><!--row２-->
      <% @post_items.each do |post_item| %>
        <table class="customer-post-item-contents">
          <tbody>
            <tr>
              <td>
                <% if customer_signed_in? %>
                  <% if current_customer.email!='guest@examle.com' %>
                  <!--ログインしたユーザーがゲストユーザーでないときブックマークアイコン表示-->
                    <% if post_item.customer_id!=current_customer.id %>
                      <!--自分の投稿したお土産はブックマークできない-->
                      <% if post_item.bookmarked_by?(current_customer) %>
                        <%=link_to post_item_bookmarks_path(post_item.id),method: :delete do %>
                          <%= image_tag 'bookmark_on.jpg',size: "30x30"%>
                          <div class="btn btn-outline-info">ブックマーク</div>
                        <% end %>
                      <% else %>
                        <%=link_to post_item_bookmarks_path(post_item.id),method: :post do %>
                          <%= image_tag 'bookmark_off.jpg',size: "30x30"%>
                        <div class="btn btn-outline-secondary">ブックマーク解除</div>
                        <% end %>
                      <% end %>
                    <% else %>
                    <% end %>
                  <% else %>
                  <% end %>
                <% else %>
                <% end %>
              </td>
            </tr>
            <tr>
              <td>
              <%=link_to post_item_path(post_item.id) do %>
                <%=image_tag post_item.get_image.variant(gravity: :center, resize:"150x150^", crop:"150x150+0+0").processed%>
                <%#=image_tag post_item.get_image(150,150) %>
              <% end %>
              </td>
            </tr>
            <tr>
              <td>
              <% if post_item.release == false %>
                <%=image_tag "rock_icon.jpg",size:"30x25" %>
              <% else %>
              <% end %>
              <%=post_item.name %>
              </td>
            </tr>
            <tr>
              <td>【<%=post_item.buy_prefecture.name %>】</td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div><!--row２ここまで-->

  </div><!--customer-post-itemここまで-->
</div><!--containerここまで-->
