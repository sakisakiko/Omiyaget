        <div class="error_explanation">
        <% if post_item.errors.any? %>
            <h4 class="ml-4" style="color:red;">
              <%= post_item.errors.count%>件のエラーが発生しました
            </h4>
            <ul class="ml-5" style="color:red;">
              <% post_item.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
        <% end %>
        </div>