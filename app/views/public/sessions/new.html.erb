<div class="container">
  <div class="sign-in-card-container my-5 mx-auto pt-3">

  <div  class="sign-in-title">
      <h4><strong>ログイン</strong></h4>
  </div>  

  <div class="sign-in-card-body mx-auto my-5">
    <%=form_with model: @customer,url: customer_session_path do |f| %>
      <!--フラッシュメッセージ表示 -->
      <p class="flash-message" style="text-align:center;"><%=flash[:notice] %></p>
      <!--deivseエラーメッセージ表示 -->
      <p class="alert ml-5"><%= alert %></p>

      <table class="sign-in-table table-bordered  mx-auto">
        <tbody>
          <tr>
            <th><span class="ml-2"> メールアドレス</span></th>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control form-control-sm col-11 mx-auto" %></td>
          </tr>
          <tr>
            <th><span class="ml-2">パスワード</span></th>
            <td><%= f.password_field :password, autocomplete: "current-password",class: "form-control form-control-sm col-11 mx-auto"%></td>
          </tr>
        </tbody>
      </table>
      <div class="row">
      <%= f.submit "ログイン",class:"btn  mx-auto mt-5",style: "background-color:#FF9900;color:white;"%>
      </div>
    <% end %>
  </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-sm-6 mx-auto mb-4">
      <div class="sign-up-link">
        <h6><strong>新規登録がお済みでない方</strong></h6>
        <%=link_to "こちら", new_customer_registration_path %>から新規登録を行ってください
      </div>
    </div>
  </div>
</div>
